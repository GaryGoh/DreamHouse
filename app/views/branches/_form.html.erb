<%= form_for(@branch) do |f| %>
    <% if @branch.errors.any? %>
        <div class="alert">
          <button class="close" data-dismiss="alert"><span class="fui-cross"></span></button>

          <h7><%= pluralize(@branch.errors.count, "error") %> prohibited this branch from being saved:</h7>

          <ul>
            <% @branch.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">

      <div class="form-group">
        <label class="control-label" for="inputError">Bno</label>
        <%= f.text_field :Bno, :class => "form-control" %>
      </div>

    </div>

    <div class="field">
      <div class="form-group">
        <label class="control-label" for="inputError">Street</label>
        <%= f.text_field :Street, :class => "form-control" %>
      </div>
    </div>
    <div class="field">

      <div class="form-group">
        <label class="control-label" for="inputError">Area</label>
        <%= f.text_field :Area, :class => "form-control" %>
      </div>
    </div>
    <div class="field">
      <div class="form-group">
        <label class="control-label" for="inputError">City</label>
        <%= f.text_field :City, :class => "form-control" %>
      </div>
    </div>
    <div class="field">
      <div class="form-group">
        <label class="control-label" for="inputError">PostCode</label>
        <%= f.text_field :Pcode, :class => "form-control" %>
      </div>
    </div>

    <div class="field">
      <div class="form-group">
        <label class="control-label" for="inputError">Tel_No</label>
        <%= f.text_field :Tel_No, :class => "form-control" %>
      </div>
    </div>

    <div class="field">
      <div class="form-group">
        <label class="control-label" for="inputError">Fax_No</label>
        <%= f.text_field :Fax_No, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">

      <div class="">
        <%= f.submit class: "btn btn-primary", value: "Submit", disable_with: 'Submitting...' %>
      </div>
    </div>
<% end %>
