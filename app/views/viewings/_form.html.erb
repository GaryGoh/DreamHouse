<%= form_for @viewing, :url => viewings_url do |f| %>
    <% if @viewing.errors.any? %>
        <div class="alert">
          <button class="close" data-dismiss="alert"><span class="fui-cross"></span></button>

          <h7><%= pluralize(@viewing.errors.count, "error") %> prohibited this viewing from being saved:</h7>

          <ul>
            <% @viewing.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <div class="form-group">
        <label class="control-label" for="inputError">Cno</label>
        <%= f.text_field :Cno, :class => "form-control" %>
      </div>
    </div>
    <div class="field">
      <div class="form-group">
        <label class="control-label" for="inputError">Pno</label>
        <%= f.text_field :Pno, :class => "form-control" %>
      </div>
    </div>
    <div class="field">
      <%= f.label :Date %>
      <br>
      <%= f.date_select :Date, {}, {:class => "selectpicker", :nameui => "huge"} %>
    </div>
    <div class="field">
      <div class="form-group">
        <label class="control-label" for="inputError">Comments</label>
        <%= f.text_area :Comment, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">

      <div class="">
        <%= f.submit class: "btn btn-primary", value: "Submit", disable_with: 'Submitting...' %>
      </div>
    </div>
<% end %>
